@model Bus





<form method="post" class="card p-5">


    <div class="row">
        <div class="col-sm-2">
            <label class="form-label" asp-for="Type"></label>
            <div>
                <select asp-for="Type" class="custom-select" style="max-width:90%"
                        asp-items="Html.GetEnumSelectList<BusType>()"></select>
            </div>
        </div>


        <div class="col-sm-3">
            <label class="form-label" asp-for="Cost"></label>
            <input class="form-control form-control-sm" asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>

        <div class="col-2">

            <label class="form-label" asp-for="From"></label>
            <div>
                <select asp-for="From" class="custom-select" style="max-width:90%"
                        asp-items="Html.GetEnumSelectList<Route>()"></select>
            </div>


        </div>
        <div class="col-2">
            <label class="form-label" asp-for="To"></label>
            <div>
                <select asp-for="To" class="custom-select" style="max-width:90%"
                        asp-items="Html.GetEnumSelectList<Route>()"></select>
            </div>
        </div>

        <div class="col-sm-3">
            <label class="form-label" asp-for="Time"></label>
            <input asp-for="Time" style="width:70%" id="timepicker" width="276" class="form-control form-control-sm" />

            <span asp-validation-for="Time" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="form-check col-3 m-2">
                <input asp-for="TourBus" class="form-check-input" type="checkbox" id="flexCheckDefault">
                <label asp-for="TourBus" class="form-check-label">
                    Tour Bus
                </label>

                <input asp-for="ava_seat" type="hidden" />
                <input asp-for="busSeatId" type="hidden" />

            </div>


        </div>


        <div style="margin-top:15px">

            <button type="submit" class="btn btn-primary btn-group-sm">Edit</button>
        </div>
    </div>
</form>
