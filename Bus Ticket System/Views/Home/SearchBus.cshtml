@model BusBookingViewModel

<link rel="stylesheet" href="~/css/Home/bus_search.css">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<style>

#card-cont-a {
    display: block;
    text-decoration: none;
    width: 80px;
    line-height: 30px;
    background-color: forestgreen;
    color: #fff;
    text-align: center;
    position: absolute;
    right: 10px;
    bottom: 10px; 
}
</style>


<div class="container" style="margin-top:25px">




     <section class="home" id="home">
        <div class="container">
            <h1 class="text-white">BD Poribohon</h1>
            <p class="text-white">Bangladesh's one of the largest bus company</p>

            <form asp-action="SearchBus" method="get">
                <div class="content grid">
                    <div class="box">
                        <label><span>Start Point:</span></label>

                        <select name="SearchFrom" class="custom-select"
                                asp-items="Html.GetEnumSelectList<Route>()"></select>
                    </div>
                    <div class="box">
                        <label><span>Destination:</span></label>

                        <select name="SearchTo" class="custom-select"
                                asp-items="Html.GetEnumSelectList<Route>()"></select>
                    </div>
                    <div class="box">
                        <label><span>Choose Class:</span></label>

                        <select name="SeachBusType" class="custom-select"
                                asp-items="Html.GetEnumSelectList<BusType>()"></select>
                    </div>
                    <div class="box">
                        <div class="input-group date" id="datepicker">
                            <label><span>Choose Date:</span></label>
                            <div class="row">
                                <input class="col-8  text-center border-3" name="datePassing" type="text">
                                <span class="col text-center input-group-append">
                                    <span class="input-group-text bg-white">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <label><span></span></label>

                        <button type="submit" class="flex1">
                            <span>Find Bus</span>
                            <i class="fas fa-arrow-circle-right"></i>
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </section>


    <form asp-action="SearchBus" method="get">
        <div class="row form-actions no-color col-lg-12">

            <div class="col-3">
                <label class="form-label">From</label>

                <select name="SearchFrom" class="custom-select"
                        asp-items="Html.GetEnumSelectList<Route>()">
                </select>


            </div>

            <div class="col-3">
                <label class="form-label">Destiantion</label>
                <select name="SearchTo" class="custom-select"
                        asp-items="Html.GetEnumSelectList<Route>()"></select>
            </div>


            <div class="col-3">
                <label class="form-label">Choose Class</label>
                <select name="SeachBusType" class="custom-select"
                        asp-items="Html.GetEnumSelectList<BusType>()"></select>
            </div>





        </div>
        <br />
        <div class="row">
            <div class="card-cont a"><input type="submit" value="Search" class="btn btn-dark" /> </div>
        </div>
    </form>
    <br>
    <br>

    <h1>Select Bus</h1>
   
    <section class="container">
        @{
            if (@Model.Buses != null)
            {

                foreach (Bus bus in Model.Buses)
                {
                     
                    <div class="row">
                        <article class="card fl-left">
                            <section class="date">
                                <time datetime="23th feb">
                                    <span>@Model.DateTime.ToString("dd")</span><span>@bus.Time.ToString("MMM")</span>
                                </time>
                            </section>
                            <section class="card-cont">

                                <h3>Bangladesh Poribohon</h3>
                                <div class="even-date">
                                    <i class="fa-solid fa-location-dot p-1 "></i>
                                    <time>
                                        <span>From: <b style="color:orange"> @bus.From</b></span>
                                        <span>To: <b style="color:orange"> @bus.To</b></span>
                                    </time>

                                </div>
                                <div class="even-info">
                                    <i class="fa-solid fa-clock"></i>
                                    <p>
                                        Journey Time: <span style="color:orange">@bus.Time.Hour:@bus.Time.Minute</span>
                                    </p>
                                </div>
                                <a id="card-cont-a" asp-action="Purchase"
                       asp-route-id=@bus.Id>BUY</a>
                            </section>
                        </article>


                    </div>


                }
            }

        }
    </section>

    <br/>
    <br/>
    <br/>

</div>
