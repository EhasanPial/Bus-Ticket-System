@using Bus_Ticket_System.Models
@using Bus_Ticket_System.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManger;

@{

     
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>


<div class="container" style="margin-top:15px">
    <form asp-action="SearchBus" method="get">
        <div class="row form-actions no-color">

            <div class="col-3">
                <label class="form-label">From</label>

                <select name="SearchFrom" class="custom-select"
                        asp-items="Html.GetEnumSelectList<Route>()"></select>


            </div>

            <div class="col-3">
                <label class="form-label">Destiantion</label>
                <select name="SearchTo" class="custom-select"
                        asp-items="Html.GetEnumSelectList<Route>()"></select>
            </div>


        </div>

        <div class="row form-actions no-color" style="margin-top:10px">

            <div class="col-3">
                <label class="form-label">Choose Class</label>

                <select name="SeachBusType" class="custom-select"
                        asp-items="Html.GetEnumSelectList<BusType>()"></select>


            </div>

            <div class="col-3">
                <div class="input-group date" id="datepicker">
                    <label class="form-label">Choose Date</label>
                    <input name="datePassing" type="text" class="form-control">
                    <span class="input-group-append">
                        <span class="input-group-text bg-white">
                            <i class="fa fa-calendar"></i>
                        </span>
                    </span>
                </div>
            </div>


        </div>

        <div class="row" style="margin-top:15px">
            <div class="col-sm-1"><input type="submit" value="Search Buses" class="btn btn-primary" /> </div>
        </div>
    </form>
</div>

<script>
    $(function() {
              $('#datepicker').datepicker();
          });
</script>