                    </p>
                    <p>Do you want to checkout our available buses?</p>
                    <button class="flex2">
                        <a asp-action="searchBus" class="text-white">Check All Bus</a>
                        <i class="fas fa-arrow-circle-right"></i>
                    </button>
                </div>
                <div class="">
                    <img src="https://www.sustainable-bus.com/wp-content/uploads/2019/12/Schermata-2019-12-06-alle-09.59.28.png" alt="" width="674px" height="347px" />
                </div>
            </div>
        </div>
    </section>


    <section class="wrapper2">
        <div class="container">
            <div class="heading mtop">
                <h5>Buy Fast</h5>
                <h2>What are you waiting for! </h2>
            </div>


            <div class="content grid mtop">
                @foreach (Bus bus in Model)
                {
                    Enum dhaka = Route.Dhaka;
                    if (!bus.From.Equals(dhaka)) continue;
                    <div class="box card text-white" style="text-align:left">

                        <a asp-action="searchBus" asp-route-SearchFrom=1 asp-route-SearchTo=2 asp-route-SeachBusType=1 asp-route-datePassing=@DateTime.Now.Date class="text-white">
                            <div class="card-header">
                                @bus.From    To    @bus.To
                            </div>
                            <div class="card-body">
                                <div class="card-text">
                                    <p>Type: @bus.Type</p>
                                    <p>Cost: @bus.Cost TK</p>
                                </div>

                            </div>

                            <span class='far fa-long-arrow-alt-right' style="text-align:right"></span>
